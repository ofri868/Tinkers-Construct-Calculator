<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.MainController">

    <top>
        <VBox spacing="4" alignment="CENTER" >
            <Label text="Tinker's Construct" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Tool stat calculator" style="-fx-font-size: 14px;"/>
        </VBox>
    </top>

    <center>
        <VBox>
            <HBox>
                <Label text="Tool:"/>
                <ComboBox fx:id="toolComboBox" promptText="Select Tool"/>
                <HBox fx:id="toolOptionsContainer" alignment="CENTER_LEFT"/>
            </HBox>

            <Button fx:id="calculateButton" text="Calculate"/>
        </VBox>
    </center>
</BorderPane>
