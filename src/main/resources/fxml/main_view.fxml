<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<StackPane fx:id="mainWindow" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.MainController">
    <BorderPane styleClass="calculator">
        <top>
            <VBox spacing="4" alignment="CENTER" >
                <ImageView fx:id="logoImage"
                           fitHeight="100"
                           preserveRatio="true"
                           pickOnBounds="true">
                    <Image url="@/images/tinkers_construct_logo_2f7.png"/>
                </ImageView>
                <Text text="Tool stat calculator" styleClass="title-label"/>
            </VBox>
        </top>
        <center>
            <VBox spacing="5">
                <Label text="Tool:"/>
                <ComboBox fx:id="toolComboBox" promptText="Select Tool"/>
                <HBox fx:id="materialOptionsContainer" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0"/>
                <HBox>
                    <Button fx:id="calculateButton" text="Calculate" alignment="TOP_LEFT"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Text fx:id="errorLabel" styleClass="error-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="compareButton" alignment="TOP_RIGHT"/>
                </HBox>
            </VBox>
        </center>
        <bottom>
            <VBox>
                <HBox alignment="CENTER_LEFT">
                    <VBox fx:id="toolStatsVBox"/>
                    <VBox fx:id="toolAbilitiesVBox" styleClass="tool-abilities-box" maxWidth="200"/>
                </HBox>
                <Button fx:id="addToComparisonButton" text="add to comparison"/>
                <Region VBox.vgrow="ALWAYS"/>
            </VBox>
        </bottom>
    </BorderPane>
    <BorderPane fx:id="comparisonPane" styleClass="comparison-pane">
        <right>
            <Button fx:id="exitButton" text="X" prefWidth="24" prefHeight="24" styleClass="exit-button"/>
        </right>
        <center>
            <ScrollPane styleClass="scroll-pane">
                <VBox fx:id="comparisonPaneVBox" spacing="20"/>
            </ScrollPane>
        </center>
    </BorderPane>
</StackPane>
